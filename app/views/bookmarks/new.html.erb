<!-- Hero Banner -->
<div class="position-relative text-white mb-4"
     style="height: 200px; background-size: cover; background-position: center;
            background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.7)), url('<%= @list.image_url || "https://images.unsplash.com/photo-1536440136628-849c177e76a1?w=1200" %>');">
  <div class="position-absolute top-50 start-50 translate-middle text-center">
    <p class="text-white-50 mb-1">Adding to</p>
    <h1 class="fw-bold display-5"><%= @list.name %></h1>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow">
        <div class="card-header bg-white py-3">
          <h4 class="mb-0"><i class="fas fa-film text-primary"></i> Add a Movie</h4>
        </div>
        <div class="card-body p-4">
          <%= simple_form_for [@list, @bookmark] do |f| %>
            <div class="mb-4">
              <%= f.association :movie,
                                label: "Select a Movie",
                                prompt: "Choose a movie...",
                                input_html: { class: "form-select form-select-lg" } %>
            </div>

            <div class="mb-4">
              <%= f.input :comment,
                          label: "Your Comment",
                          placeholder: "Why do you love this movie? Any thoughts to share...",
                          input_html: { class: "form-control", rows: 3 },
                          hint: "Minimum 6 characters" %>
            </div>

            <div class="d-grid gap-2">
              <%= f.button :submit, class: "btn btn-success btn-lg" do %>
                <i class="fas fa-plus"></i> Add to List
              <% end %>
              <%= link_to list_path(@list), class: "btn btn-outline-secondary" do %>
                <i class="fas fa-arrow-left"></i> Back to List
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <% if Movie.count > 0 %>
        <div class="card mt-4 shadow-sm">
          <div class="card-header bg-light">
            <h6 class="mb-0"><i class="fas fa-info-circle text-info"></i> Available Movies</h6>
          </div>
          <div class="card-body">
            <div class="d-flex flex-wrap gap-2">
              <% Movie.order(:title).limit(8).each do |movie| %>
                <span class="badge bg-secondary"><%= movie.title %></span>
              <% end %>
              <% if Movie.count > 8 %>
                <span class="badge bg-light text-muted">+<%= Movie.count - 8 %> more</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
