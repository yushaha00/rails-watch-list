<!-- Hero Banner -->
<div class="position-relative text-white mb-4"
     style="height: 200px; background-size: cover; background-position: center;
            background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.7)), url('https://images.unsplash.com/photo-1485846234645-a62644f84728?w=1200');">
  <div class="position-absolute top-50 start-50 translate-middle text-center">
    <h1 class="fw-bold display-5"><i class="fas fa-plus-circle"></i> Create New List</h1>
    <p class="text-white-50">Organize your favorite movies</p>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow">
        <div class="card-body p-4">
          <%= simple_form_for @list do |f| %>
            <div class="mb-4">
              <%= f.input :name,
                          label: "List Name",
                          placeholder: "e.g., Sci-Fi Favorites, Must Watch, Weekend Picks...",
                          input_html: { class: "form-control form-control-lg" } %>
            </div>

            <div class="mb-4">
              <%= f.input :image_url,
                          label: "Cover Image URL",
                          placeholder: "https://images.unsplash.com/...",
                          hint: "Paste a URL for your list's cover image (optional)",
                          input_html: { class: "form-control" } %>
            </div>

            <div class="bg-light rounded p-3 mb-4">
              <p class="mb-2 fw-bold"><i class="fas fa-lightbulb text-warning"></i> Quick image suggestions:</p>
              <small class="text-muted">
                Try searching on <a href="https://unsplash.com/s/photos/cinema" target="_blank">Unsplash</a>
                for free movie-themed images. Right-click an image and copy the image URL.
              </small>
            </div>

            <div class="d-grid gap-2">
              <%= f.button :submit, "Create List", class: "btn btn-success btn-lg" %>
              <%= link_to "Cancel", lists_path, class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
