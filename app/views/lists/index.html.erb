<!-- Hero Banner -->
<div class="position-relative text-center text-white"
     style="height: 350px; background-size: cover; background-position: center;
            background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?w=1200');">
  <div class="position-absolute top-50 start-50 translate-middle">
    <h1 class="fw-bold display-3">My Watch Lists</h1>
    <p class="fs-4 text-white-50">Organize and save your favorite movies</p>
    <%= link_to new_list_path, class: "btn btn-success btn-lg mt-3" do %>
      <i class="fas fa-plus"></i> Create New List
    <% end %>
  </div>
</div>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold"><i class="fas fa-folder-open text-primary"></i> My Lists</h2>
    <span class="badge bg-secondary fs-6"><%= pluralize(@lists.count, "list") %></span>
  </div>

  <% if @lists.empty? %>
    <div class="text-center py-5">
      <i class="fas fa-film fa-4x text-muted mb-3"></i>
      <h4 class="text-muted">No lists yet</h4>
      <p class="text-muted">Create your first list to start organizing movies!</p>
      <%= link_to new_list_path, class: "btn btn-primary btn-lg" do %>
        <i class="fas fa-plus"></i> Create Your First List
      <% end %>
    </div>
  <% else %>
    <div class="row">
      <% @lists.each do |list| %>
        <div class="col-md-4 mb-4">
          <%= link_to list_path(list), class: "text-decoration-none" do %>
            <div class="card shadow-sm h-100" style="border-radius: 12px; overflow: hidden; transition: transform 0.2s;">
              <div class="position-relative">
                <% if list.image_url.present? %>
                  <%= image_tag list.image_url, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
                <% else %>
                  <img src="https://images.unsplash.com/photo-1536440136628-849c177e76a1?w=800"
                       class="card-img-top" style="height: 200px; object-fit: cover;">
                <% end %>
                <div class="position-absolute bottom-0 start-0 end-0 p-3"
                     style="background: linear-gradient(transparent, rgba(0,0,0,0.8));">
                  <h5 class="fw-bold text-white mb-1"><%= list.name %></h5>
                  <small class="text-white-50">
                    <i class="fas fa-film"></i> <%= pluralize(list.bookmarks.count, "movie") %>
                  </small>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<style>
  .card:hover {
    transform: translateY(-5px);
  }
</style>
