<!-- Hero Banner -->
<div class="position-relative text-white mb-4"
     style="height: 250px; background-size: cover; background-position: center;
            background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.7)), url('<%= @list.image_url || "https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?w=800" %>');">
  <div class="position-absolute top-50 start-50 translate-middle text-center">
    <h1 class="fw-bold display-4"><%= @list.name %></h1>
    <p class="fs-5 text-white-50"><%= pluralize(@list.bookmarks.count, "movie") %> in this list</p>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <%= link_to "â† Back to Lists", lists_path, class: "btn btn-outline-secondary" %>
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-success" %>
  </div>

  <% if @list.bookmarks.empty? %>
    <div class="text-center py-5">
      <i class="fas fa-film fa-3x text-muted mb-3"></i>
      <p class="text-muted fs-5">No movies in this list yet.</p>
      <%= link_to "Add your first movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
    </div>
  <% else %>
    <div class="row">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100 shadow-sm">
            <%= image_tag bookmark.movie.poster_url,
                          alt: bookmark.movie.title,
                          class: "card-img-top",
                          style: "height: 300px; object-fit: cover;" %>
            <div class="card-body d-flex flex-column">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <h5 class="card-title mb-0"><%= bookmark.movie.title %></h5>
                <span class="badge bg-warning text-dark">
                  <i class="fas fa-star"></i> <%= bookmark.movie.rating %>
                </span>
              </div>
              <p class="card-text text-muted small flex-grow-1">
                <%= truncate(bookmark.movie.overview, length: 120) %>
              </p>
              <% if bookmark.comment.present? %>
                <div class="bg-light rounded p-2 mb-3">
                  <small class="text-muted">
                    <i class="fas fa-comment"></i> "<%= bookmark.comment %>"
                  </small>
                </div>
              <% end %>
              <%= button_to list_bookmark_path(@list, bookmark),
                            method: :delete,
                            data: { turbo_confirm: "Remove this movie from the list?" },
                            class: "btn btn-outline-danger btn-sm w-100" do %>
                <i class="fas fa-trash-alt"></i> Remove
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
